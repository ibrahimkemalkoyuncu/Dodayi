@model DetailDto

<style>
    .form-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.04);
        margin: 1.5rem 0;
    }

    .form-header {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        padding: 1.5rem;
        border-radius: 12px 12px 0 0;
        text-align: center;
    }

    .form-title {
        color: #fff;
        margin: 0;
        font-weight: 600;
        font-size: 1.5rem;
    }

    .form-body {
        padding: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 0.625rem 1rem;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            border-color: #4b6cb7;
            box-shadow: 0 0 0 3px rgba(75, 108, 183, 0.1);
        }

    .text-danger {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .btn {
        padding: 0.625rem 1.25rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(75, 108, 183, 0.2);
        }

    .btn-secondary {
        background: #f3f4f6;
        border: 1px solid #e5e7eb;
        color: #4b5563;
    }

        .btn-secondary:hover {
            background: #e5e7eb;
            transform: translateY(-1px);
        }

    .form-section {
        background: #f9fafb;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-section-title {
        color: #4b6cb7;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .form-body {
            padding: 1.5rem;
        }
    }
</style>

<div class="form-container">
    <div class="form-header">
        <h1 class="form-title">Add Makine Techizat</h1>
    </div>
    <div class="form-body">
        <form asp-action="AddMakineTechizatDetailCreate" method="post">
            <div class="form-section">
                <div class="form-section-title">Basic Information</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="form-label">Project ID</label>
                            <input asp-for="ProjectId" class="form-control" />
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Technical Details</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TechnicalPros" class="form-label">Technical Pros</label>
                            <input asp-for="TechnicalPros" class="form-control" />
                            <span asp-validation-for="TechnicalPros" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Why" class="form-label">Purpose</label>
                            <input asp-for="Why" class="form-control" />
                            <span asp-validation-for="Why" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Quantity and Price</div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Count" class="form-label">Count</label>
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Unit" class="form-label">Unit</label>
                            <input asp-for="Unit" class="form-control" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="UnitUsd" class="form-label">Unit Price (USD)</label>
                            <input asp-for="UnitUsd" class="form-control" />
                            <span asp-validation-for="UnitUsd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Additional Information</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PiyasaTuru" class="form-label">Market Type</label>
                            <input asp-for="PiyasaTuru" class="form-control" />
                            <span asp-validation-for="PiyasaTuru" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Year" class="form-label">Year</label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="YurtdisiGerekce" class="form-label">Foreign Purchase Reason</label>
                            <input asp-for="YurtdisiGerekce" class="form-control" />
                            <span asp-validation-for="YurtdisiGerekce" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Distributor" class="form-label">Distributor</label>
                            <input asp-for="Distributor" class="form-control" />
                            <span asp-validation-for="Distributor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-2">
                    <a asp-action="DetailIndex" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
                <div class="col-md-6 mb-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-lg me-2"></i>Create
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


