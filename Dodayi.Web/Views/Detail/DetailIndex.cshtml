@model PagedList<DetailDto>

<style>
    .table-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.04);
        margin: 1.5rem 0;
    }

    .custom-header {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        padding: 1.5rem;
        border-radius: 12px 12px 0 0;
    }

    .table-title {
        color: #fff;
        margin: 0;
        font-weight: 600;
        font-size: 1.25rem;
    }

    .add-button {
        background: #fff;
        color: #4b6cb7;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .add-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .table-section {
        padding: 1.5rem;
    }

    .data-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .data-table th {
            background: #f8f9fa;
            padding: 1rem;
            font-weight: 600;
            color: #495057;
            text-align: left;
            border-bottom: 2px solid #e9ecef;
        }

        .data-table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            vertical-align: middle;
        }

        .data-table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-active {
        background-color: #e1f6ed;
        color: #0d9488;
    }

    .status-inactive {
        background-color: #fff1f2;
        color: #be123c;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-action {
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        border: none;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background-color: #e0f2fe;
        color: #0369a1;
    }

    .btn-delete {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .btn-action:hover {
        transform: translateY(-2px);
    }

    /* Pagination Styles */
    .pagination-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    .page-info {
        color: #6b7280;
        font-size: 0.875rem;
    }

    .pagination {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 0.25rem;
    }

    .page-item .page-link {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 32px;
        height: 32px;
        padding: 0 0.5rem;
        border-radius: 6px;
        background: #fff;
        border: 1px solid #e5e7eb;
        color: #4b5563;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .page-item.active .page-link {
        background: #4b6cb7;
        border-color: #4b6cb7;
        color: #fff;
    }

    .page-item .page-link:hover:not(.active) {
        background: #f3f4f6;
    }

    .page-item.disabled .page-link {
        color: #9ca3af;
        pointer-events: none;
        background: #f3f4f6;
    }

    @@media (max-width: 768px) {
        .custom-header {
            padding: 1rem;
        }

        .table-section {
            padding: 1rem;
        }

        .pagination-container {
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }
</style>

<div class="table-container">
    <div class="custom-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="table-title">Details List</h2>
            <a href="@Url.Action("AddMakineTechizatDetailCreate")" class="add-button">
                <i class="bi bi-plus-lg me-2"></i>Add New
            </a>
        </div>
    </div>

    <div class="table-section">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Unit</th>
                        <th>Type</th>
                        <th>Sum</th>
                        <th>Year</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@item.Unit</td>
                            <td>@item.Type</td>
                            <td>@(item.Sum?.ToString("C") ?? "-")</td>
                            <td>@item.Year</td>
                            <td>
                                <span class="status-badge @(item.Status == true ? "status-active" : "status-inactive")">
                                    @(item.Status == true ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("EditDetail", new { id = item.Id })"
                                       class="btn-action btn-edit" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteDetail", new { id = item.Id })"
                                       class="btn-action btn-delete"
                                       onclick="return confirm('Are you sure you want to delete this item?');"
                                       title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination-container">
            <div class="page-info">
                Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to
                @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of
                @Model.TotalCount entries
            </div>

            @if (Model.TotalPages > 1)
            {
                <ul class="pagination">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DetailIndex", new { page = 1 })" title="First">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DetailIndex", new { page = Model.PageNumber - 1 })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, startPage + 4);
                        startPage = Math.Max(1, endPage - 4);

                        foreach (var i in Enumerable.Range(startPage, endPage - startPage + 1))
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("DetailIndex", new { page = i })">@i</a>
                            </li>
                        }
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DetailIndex", new { page = Model.PageNumber + 1 })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("DetailIndex", new { page = Model.TotalPages })" title="Last">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>













