@model CouponDto

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-primary">
                    <h2 class="text-white text-center mb-0">Delete Coupon</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CouponDelete" method="post">
                        <input asp-for="CouponId" type="hidden" />

                        <div class="mb-4">
                            <label asp-for="CouponCode" class="form-label fw-bold">Coupon Code</label>
                            <input asp-for="CouponCode" class="form-control" disabled />
                        </div>

                        <div class="mb-4">
                            <label asp-for="DiscountAmount" class="form-label fw-bold">Discount Amount</label>
                            <input asp-for="DiscountAmount" class="form-control" disabled />
                        </div>

                        <div class="mb-4">
                            <label asp-for="MinAmount" class="form-label fw-bold">Minimum Amount</label>
                            <input asp-for="MinAmount" class="form-control" disabled />
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6 mb-3">
                                <a asp-action="CouponIndex" class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                            <div class="col-md-6 mb-3">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-trash"></i> Delete Coupon
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



