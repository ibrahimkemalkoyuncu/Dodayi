@using Dodayi.Web.Utility
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="INTFA - Tarımsal Alışveriş Merkezi" />
    <meta name="author" content="INTFA" />
    <title>@ViewData["Title"] - INTFA - Tarımsal Alışveriş Merkezi</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Google Fonts - Roboto ve Open Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Agricultural Theme CSS -->
    <link rel="stylesheet" href="~/css/agricultural-theme.css" asp-append-version="true" />
    
    <!-- Sayfaya özel stil dosyaları için render section -->
    @await RenderSectionAsync("Styles", required: false)
    
    <!-- Sayfa içi düzeltme stilleri -->
    <style>
        /* Bootstrap navbar override stilleri */
        .navbar-toggler:focus {
            box-shadow: none !important;
        }
        
        @@media (max-width: 991.98px) {
            .agri-main-menu .navbar-collapse {
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                z-index: 1000;
                background-color: var(--primary-color);
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                border-top: 1px solid rgba(255,255,255,0.1);
            }
            
            .agri-main-menu .navbar-collapse.show,
            .agri-main-menu .navbar-collapse.collapsing {
                padding: 0;
            }
            
            .agri-main-menu .navbar-collapse.show .navbar-nav,
            .agri-main-menu .navbar-collapse.collapsing .navbar-nav {
                padding: 0.5rem 0;
            }
            
            .agri-main-menu .navbar-collapse.show .nav-item,
            .agri-main-menu .navbar-collapse.collapsing .nav-item {
                margin: 0;
                width: 100%;
            }
            
            .agri-main-menu .navbar-collapse.show .nav-link,
            .agri-main-menu .navbar-collapse.collapsing .nav-link {
                padding: 0.75rem 1rem;
                border-bottom: 1px solid rgba(255,255,255,0.1);
                width: 100%;
                text-align: left;
            }
            
            .agri-main-menu .navbar-collapse.show .nav-link:hover,
            .agri-main-menu .navbar-collapse.collapsing .nav-link:hover {
                background-color: rgba(255,255,255,0.15);
            }
            
            /* 3 div yapısı için ek stiller */
            .nav-bottom-div {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Top Bar (Üst Bilgi Çubuğu) -->
    <div class="agri-top-bar py-1 d-none d-md-block">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-inline mb-0 small">
                        <li class="list-inline-item me-3"><i class="fas fa-phone-alt me-1"></i> 0506 940 00 05</li>
                        <li class="list-inline-item"><i class="fas fa-envelope me-1"></i> info@intfarming.com</li>
                    </ul>
                </div>
                <div class="col-md-6 text-end">
                    <ul class="list-inline mb-0 small">
                        <li class="list-inline-item me-3"><a href="#" class="text-decoration-none"><i class="fas fa-truck me-1"></i> Sipariş Takip</a></li>
                        <li class="list-inline-item me-3"><a href="#" class="text-decoration-none"><i class="fas fa-map-marker-alt me-1"></i> Mağazalarımız</a></li>
                        <li class="list-inline-item"><a href="#" class="text-decoration-none"><i class="fas fa-headset me-1"></i> Yardım</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Header Area -->
    <header>
        <!-- Top Row: Sepet ve Profil Bilgileri -->
        <div class="agri-top-header bg-light py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 col-7 d-flex align-items-center">
                        <div class="header-contact me-4">
                            <i class="fas fa-phone-alt me-1 text-primary"></i>
                            <span>0506 940 00 05</span>
                        </div>
                        <div class="header-email">
                            <i class="fas fa-envelope me-1 text-primary"></i>
                            <span>info@intfarming.com</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-5 text-end">
                        <div class="header-actions">
                            <a href="#" class="btn btn-sm btn-link text-dark me-2">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="d-none d-md-inline ms-1">Sepetim</span>
                                <span class="badge bg-primary rounded-pill">0</span>
                            </a>
                            <a href="#" class="btn btn-sm btn-link text-dark">
                                <i class="fas fa-user"></i>
                                <span class="d-none d-md-inline ms-1">Hesabım</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Middle Row: Logo ve Arama -->
        <div class="agri-navbar py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3 col-7">
                        <a class="navbar-brand" href="/">
                            <i class="fas fa-leaf me-2"></i>
                            <span class="fw-bold">INTFA</span>
                        </a>
                    </div>
                    <div class="col-md-9 col-5">
                        <div class="search-container">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Arama yap...">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Navigation Menu -->
        <nav class="agri-main-menu navbar navbar-expand-lg">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" aria-controls="mainMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="mainMenu">
                    <!-- Üç div ekleniyor, menüler en alttaki divde -->
                    <div class="nav-top-div py-2">
                        <!-- Üst div içeriği burada olabilir -->
                        <div class="d-none d-lg-block">
                            <span class="text-white fw-light small">En kaliteli tarım ürünleri seçenekleri</span>
                        </div>
                    </div>
                    
                    <div class="nav-middle-div py-2">
                        <!-- Orta div içeriği burada olabilir -->
                        <div class="d-none d-lg-block">
                            <div class="row">
                                <div class="col-6">
                                    <span class="text-white fw-light small"><i class="fas fa-truck me-1"></i> Hızlı teslimat</span>
                                </div>
                                <div class="col-6 text-end">
                                    <span class="text-white fw-light small"><i class="fas fa-check-circle me-1"></i> Kalite garantisi</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="nav-bottom-div">
                        <!-- En alttaki div - Menüler burada -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">SEBZE TOHUMLARI</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">SERA ÇEŞİTLERİ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">ÇİM TOHUMU</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">AĞAÇ TOHUMLARI</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">ÇİLEK FİDESİ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">YEM BİTKİLERİ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">GÜBRE ÇEŞİTLERİ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">TARIM ALETLERİ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">BLOG</a>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="nav-sub-menu-div mt-2 border-top border-light pt-2">
                        <!-- Alt menü öğeleri -->
                        <ul class="navbar-nav sub-navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link sub-nav-link" href="/">Ana Sayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link sub-nav-link" href="/urunler">Ürünler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link sub-nav-link" href="/kuponlar">Kuponlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link sub-nav-link" href="/hakkimizda">Hakkımızda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link sub-nav-link" href="/gizlilik">Gizlilik</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Mobile Search (visible only on small screens) -->
    <div class="container d-block d-md-none my-2">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Arama yap...">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-5 py-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">INTFA</h5>
                    <p class="small">Türkiye'nin en geniş tarım ürünleri çeşitliliğine sahip tarımsal alışveriş merkezi. Kaliteli ve sertifikalı tohum ve fide çeşitleri INTFA güvencesiyle.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Hızlı Erişim</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-decoration-none">Hakkımızda</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Misyonumuz</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Vizyonumuz</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">İletişim</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Müşteri Hizmetleri</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-decoration-none">Sipariş Takibi</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">İade ve Değişim</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Sık Sorulan Sorular</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Üyelik Sözleşmesi</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Gizlilik Politikası</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold mb-3">İletişim</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> Ankara, Türkiye</li>
                        <li class="mb-2"><i class="fas fa-phone-alt me-2"></i> 0506 940 00 05</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@intfarming.com</li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center small">
                &copy; @DateTime.Now.Year - INTFA Tarımsal Alışveriş Merkezi - Tüm Hakları Saklıdır.
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <div class="back-to-top-container">
        <button class="back-to-top" id="backToTop">
            <i class="fas fa-arrow-up"></i>
        </button>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Back to top button
            const backToTopButton = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 200) {
                    backToTopButton.classList.add('show');
                } else {
                    backToTopButton.classList.remove('show');
                }
            });
            
            backToTopButton.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
            
            // Mobil menü için Bootstrap olayları
            const navbarCollapse = document.getElementById('mainMenu');
            
            if (navbarCollapse) {
                navbarCollapse.addEventListener('show.bs.collapse', function () {
                    // Menü açılırken
                    if (window.innerWidth <= 991.98) {
                        document.querySelector('.nav-bottom-div .navbar-nav').style.flexDirection = 'column';
                        
                        // Alt menü için de stil ekle
                        if (document.querySelector('.sub-navbar-nav')) {
                            document.querySelector('.sub-navbar-nav').style.flexDirection = 'column';
                        }
                    }
                });
                
                navbarCollapse.addEventListener('hidden.bs.collapse', function () {
                    // Menü kapandıktan sonra
                    if (window.innerWidth <= 991.98) {
                        setTimeout(function() {
                            document.querySelector('.nav-bottom-div .navbar-nav').style.flexDirection = 'row';
                            
                            // Alt menü için de stil ekle
                            if (document.querySelector('.sub-navbar-nav')) {
                                document.querySelector('.sub-navbar-nav').style.flexDirection = 'row';
                            }
                        }, 150);
                    }
                });
            }
            
            // Ekran boyutu değiştiğinde
            window.addEventListener('resize', function() {
                if (window.innerWidth > 991.98) {
                    // Masaüstü görünümüne geçerken
                    document.querySelector('.nav-bottom-div .navbar-nav').style.flexDirection = 'row';
                    
                    // Alt menü için de stil ekle
                    if (document.querySelector('.sub-navbar-nav')) {
                        document.querySelector('.sub-navbar-nav').style.flexDirection = 'row';
                    }
                } else if (window.innerWidth <= 991.98) {
                    // Mobil görünüme geçerken
                    if (navbarCollapse && !navbarCollapse.classList.contains('show')) {
                        document.querySelector('.nav-bottom-div .navbar-nav').style.flexDirection = 'row';
                        
                        // Alt menü için de stil ekle
                        if (document.querySelector('.sub-navbar-nav')) {
                            document.querySelector('.sub-navbar-nav').style.flexDirection = 'row';
                        }
                    }
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 