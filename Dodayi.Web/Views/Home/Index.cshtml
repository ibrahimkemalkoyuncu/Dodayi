<!-- Products Section -->
<section id="products" class="mb-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="mb-0">Ürünlerimiz</h2>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-sort me-1"></i>Sırala
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Fiyata Göre: Artan</a></li>
                    <li><a class="dropdown-item" href="#">Fiyata Göre: Azalan</a></li>
                    <li><a class="dropdown-item" href="#">İsme Göre: A-Z</a></li>
                    <li><a class="dropdown-item" href="#">İsme Göre: Z-A</a></li>
                </ul>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Henüz ürün eklenmemiş.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="card product-card h-100">
                            @if (product.ImageUrl != null)
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200?text=Ürün+Görseli" class="card-img-top" alt="@product.Name">
                            }
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="product-title">@product.Name</h5>
                                <p class="text-muted small mb-2">@product.CategoryName</p>
                                <p class="mb-3 flex-grow-1">@(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)</p>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="product-price">@product.Price.ToString("c")</span>
                                    <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye me-1"></i>Detaylar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Call to Action Section -->
<section class="bg-light py-5 rounded-3 mb-5">
    <div class="container text-center">
        <h2 class="mb-3">Kuponlar ve İndirimler</h2>
        <p class="lead mb-4">En güncel kampanyalarımızdan haberdar olmak için kuponlarımıza göz atın.</p>
        <a asp-controller="Coupon" asp-action="CouponIndex" class="btn btn-primary btn-lg">
            <i class="fas fa-tag me-2"></i>Kuponları Keşfet
        </a>
    </div>
</section>

@section Scripts {
    <script>
        // Ürün kartları için hover efekti
        document.addEventListener('DOMContentLoaded', function() {
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.classList.add('shadow');
                });
                card.addEventListener('mouseleave', function() {
                    this.classList.remove('shadow');
                });
            });
            
            // Banner carousel için ayarlar
            const bannerCarousel = new bootstrap.Carousel(document.getElementById('bannerCarousel'), {
                interval: 5000,
                wrap: true,
                keyboard: true,
                pause: 'hover'
            });
        });
    </script>
}

@section Styles {
    <style>
        /* Banner carousel stilleri */
        #bannerCarousel {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        #bannerCarousel .carousel-item {
            transition: transform 1s ease-in-out;
            position: relative;
        }
        
        #bannerCarousel .carousel-indicators {
            margin-bottom: 0.5rem;
        }
        
        #bannerCarousel .carousel-indicators button {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin: 0 5px;
        }
        
        #bannerCarousel .carousel-control-prev,
        #bannerCarousel .carousel-control-next {
            width: 40px;
            height: 40px;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
            opacity: 0.7;
        }
        
        #bannerCarousel .carousel-control-prev {
            left: 10px;
        }
        
        #bannerCarousel .carousel-control-next {
            right: 10px;
        }
        
        #bannerCarousel .carousel-control-prev:hover,
        #bannerCarousel .carousel-control-next:hover {
            opacity: 1;
        }
        
        /* Caption stilleri */
        #bannerCarousel .carousel-caption {
            background: rgba(0, 0, 0, 0.5);
            border-radius: 8px;
            padding: 15px;
            bottom: 20px;
            right: 40px;
            left: 40px;
            text-align: left;
        }
        
        #bannerCarousel .carousel-caption h4 {
            font-weight: 700;
            margin-bottom: 8px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
        }
        
        #bannerCarousel .carousel-caption p {
            margin-bottom: 12px;
            font-size: 14px;
        }
        
        #bannerCarousel .carousel-caption .btn {
            color: var(--primary-color);
            font-weight: 600;
        }
        
        /* Responsive ayarları */
        @@media (max-width: 768px) {
            #bannerCarousel .d-none.d-md-block {
                display: block !important;
            }
            
            #bannerCarousel .carousel-caption {
                padding: 10px;
                bottom: 10px;
                right: 20px;
                left: 20px;
            }
            
            #bannerCarousel .carousel-caption h4 {
                font-size: 16px;
                margin-bottom: 5px;
            }
            
            #bannerCarousel .carousel-caption p {
                font-size: 12px;
                margin-bottom: 8px;
            }
            
            #bannerCarousel .carousel-caption .btn {
                font-size: 12px;
                padding: 2px 8px;
            }
        }
    </style>
}